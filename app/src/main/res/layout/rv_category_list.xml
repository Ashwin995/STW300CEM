<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_rv_horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_fav">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgJob"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/img"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvJobName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/imgJob"
            android:text="User Interface Designer"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvJobName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgJob"
            android:text="Nintendo.co " />

        <Button
            android:id="@+id/btnTime"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/imgJob"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Full Time"
            android:textAllCaps="false"
            android:textColor="#FF5722"
            android:textSize="8dp" />

        <Button
            android:id="@+id/btnJobLevel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/imgJob"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/btnTime"
            android:text="Senior Level"
            android:textAllCaps="false"
            android:textColor="#3F51B5"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/tvRemDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:text="7d" />

    </RelativeLayout>


</RelativeLayout>
